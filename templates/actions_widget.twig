<div class="actions-container" data-actions-url="{{ path('editorstrack.actions') }}">
  {% for action in actions %}
    <div class="alert {{ actionsmetadata[action.action].class }}" role="alert">
      {{ action.displayname }} {{ actionsmetadata[action.action].text  }} this record
    </div>
  {% endfor %}
</div>

<script>
  var editorstrackdata = {
    recordID: '{{ actions|first()['record_id'] }}',
    contenttype: '{{ actions|first()['contenttype'] }}',
    userID: '{{ user.id }}',
  }
</script>
